<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Change Site"
    x:Class="TestApp2.Views.ChangeSitePage">
    <ContentPage.Content>
       <StackLayout Padding="10">
           <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="15">
               <Label TextColor="Blue" Text="Current Site" FontSize="15" FontAttributes="Bold"/>
               <Label x:Name="currentSite" FontSize="15" FontAttributes="Bold" Margin="20,0,0,0"/>
           </StackLayout>
           <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="15">
               <Label TextColor="Blue" Text="Select Site" FontSize="15" FontAttributes="Bold"/>
               <Picker x:Name="Config_List" Title="Configuration" FontSize="15" FontAttributes="Bold" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" Margin="20,0,0,20"/>
           </StackLayout>
           <Button CornerRadius="10" TextColor="White" BackgroundColor="Green" FontAttributes="Bold" Text="Change Site" Clicked="ChangeSiteClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,18"/>
       </StackLayout> 
    </ContentPage.Content>
</ContentPage>
